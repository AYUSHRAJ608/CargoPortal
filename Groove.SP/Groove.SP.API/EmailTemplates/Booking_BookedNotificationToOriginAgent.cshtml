@model Groove.SP.Application.POFulfillment.ViewModels.POFulfillmentEmailViewModel
@{
    Layout = "_EmailLayout.cshtml";
}

<p>Dear @Model.Name,</p>
<p>A new booking has been submitted: <a href="@Model.DetailPage">@Model.BookingRefNumber</a></p>
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td style="font: inherit !important">
            <p class="mt-0">Shipper: @Model.Shipper</p>
        </td>
        <td style="font: inherit !important">
            <p class="mt-0">Consignee: @Model.Consignee</p>
        </td>
    </tr>
    <tr>
        <td style="font: inherit !important">
            <p class="mt-0">POL: @Model.ShipFrom</p>
        </td>
        <td style="font: inherit !important">
            <p class="mt-0">Cargo Ready Date: @(Model.CargoReadyDate != null ? Model.CargoReadyDate.Value.ToString("yyyy-MM-dd") : "")</p>
        </td>
    </tr>
    <tr>
        <td style="font: inherit !important">
            <p class="mt-0">POD: @Model.ShipTo</p>
        </td>
        <td style="font: inherit !important">
            <p class="mt-0">Container Type: @(Model.EquipmentTypes != null && Model.EquipmentTypes.Any() ? string.Join(", ", Model.EquipmentTypes) : "")</p>
        </td>
    </tr>
</table>
<p>For more information, you are welcome to contact our customer service representatives by emailing us at @Model.SupportEmail.</p>
<br />
<p>Regards,</p>
<p>Shipment Portal Team.</p>